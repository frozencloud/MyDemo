<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarStyle" parent="android:Theme.Holo.Light.DarkActionBar">

    </style>
    <style name="IconActionBarStyle" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- 自定义actionbar返回按钮 -->
        <!--<item name="android:homeAsUpIndicator">@drawable/actionbar_back</item>-->
        <!-- action bar height -->
        <!--为overflow添加contentDescription -->
        <item name="android:actionOverflowButtonStyle">@style/Overflow</item>
        <item name="android:actionBarSize">80dp</item>
        <item name="android:displayOptions">disableHome</item>
    </style>

    <style name="Overflow">
        <item name="android:contentDescription">action_menu_overflow_description</item>
    </style>

</resources>
