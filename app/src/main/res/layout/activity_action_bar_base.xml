<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fc.mydemo.activity.widget.actionbar.ActionBarBaseActivity">

    <Button
        android:id="@+id/show_actionbar_btn"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:text="显示actionbar"/>
    <Button
        android:id="@+id/hide_actionbar_btn"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@+id/show_actionbar_btn"
        android:layout_marginRight="10dp"
        android:text="隐藏actionbar"/>

    <Button
        android:id="@+id/to_sub_action_bar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/show_actionbar_btn"
        android:text="进入下级ActionBar Activity"/>


</RelativeLayout>
