<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <Button
        android:id="@+id/bind_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定服务(bind)"/>
    <Button
        android:id="@+id/start_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动服务(start)"/>
    <Button
        android:id="@+id/unbind_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解绑定服务(unbind)"/>
    <Button
        android:id="@+id/stop_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止服务(stop)"/>
</LinearLayout>
